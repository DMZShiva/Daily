<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.nodemedia.NodePlayerView
        android:id="@+id/rtmpNpv"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl_ctrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ctrl_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/control_up_ctrl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ctrl_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/control_left_ctrl" />

            <Button
                android:id="@+id/btn_ctrl_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/control_right_ctrl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn_ctrl_down"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/control_down_ctrl" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

