<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_by_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/login_by_password_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/underline_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/login_number"/>

        <EditText
            android:id="@+id/login_by_password_number_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/login_by_password_number_hint"
            android:textSize="14sp"
            android:paddingStart="15dp"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_by_password_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/underline_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/login_password"/>

        <EditText
            android:id="@+id/login_by_password_password_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/login_by_password_password"
            android:inputType="numberPassword"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:paddingStart="15dp"
            android:background="@null"/>

        <ImageView
            android:id="@+id/login_clean"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:src="@drawable/login_clean"
            android:visibility="gone"/>

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/login_by_password_off"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/password_show_selector"
            android:checked="false"
            android:textOff="@null"
            android:textOn="@null"/>

    </LinearLayout>

</LinearLayout>